<?xml version="1.0"?>
<info xmlns:xsi= "http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="https://apps.nextcloud.com/schema/apps/info.xsd">
    <id>metadata</id>
    <name>Metadata</name>
    <summary>A plugin for displaying file metadata</summary>
    <description><![CDATA[A plugin which displays file metadata in the file details sidebar.

See the [README](https://github.com/gino0631/nextcloud-metadata/blob/master/README.md) for the supported file types and limitations.]]>
    </description>
    <version>0.12.0</version>
    <licence>agpl</licence>
    <author>gino0631</author>
    <category>files</category>
    <category>tools</category>
    <website>https://github.com/gino0631/nextcloud-metadata</website>
    <bugs>https://github.com/gino0631/nextcloud-metadata/issues</bugs>
    <screenshot>https://raw.githubusercontent.com/gino0631/nextcloud-metadata/master/screenshots/jpg-metadata.png</screenshot>
    <dependencies>
        <php min-version="5.6" max-version="7.4" />
        <lib>exif</lib>
        <owncloud min-version="10" max-version="11" />
        <nextcloud min-version="13" max-version="19" />
    </dependencies>
    <settings>
		<personal>OCA\Metadata\Settings\Personal</personal>
		<personal-section>OCA\Metadata\Settings\PersonalSection</personal-section>
	</settings>
    <background-jobs>
        <job>OCA\Metadata\Cron\MetadataTagJob</job>
    </background-jobs>
</info>
